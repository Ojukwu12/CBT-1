PORT=3000
MONGO_URI=mongodb://localhost:27017/cbt_system
NODE_ENV=development
GEMINI_API_KEY=your_gemini_api_key_here
AI_ENABLED=true
AI_DAILY_LIMIT=50
AI_CACHE_HOURS=24
UNIVERSITY_ID=unizik

# JWT Authentication (Required)
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# Paystack Payment Integration (Optional)
PAYSTACK_SECRET_KEY=your_paystack_secret_key_here
PAYSTACK_PUBLIC_KEY=your_paystack_public_key_here

# Brevo Email Integration (Optional but recommended)
BREVO_API_KEY=your_brevo_api_key_here

# Email Configuration
EMAIL_FROM=noreply@universitycbt.com
SUPPORT_EMAIL=support@universitycbt.com
APP_URL=http://localhost:3000

# Base URL for API endpoints in email links (used in templates)
# This should be the public URL of your API server
# For development: http://localhost:3000
# For production: https://api.yourdomain.com
BASE_URL=http://localhost:3000

# Frontend & CORS Configuration (Important for Production)
FRONTEND_URL=http://localhost:5173
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
